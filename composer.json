{
    "name": "keboola/processor-decompress",
    "description": "Processor which decompresses files in different formats",
    "license": "MIT",
    "type": "project",
    "require": {
        "PHP": "^7.1",
        "keboola/php-component": "^2.0",
        "symfony/process": "^4.0"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^1.0",
        "keboola/coding-standard": "^1.0",
        "keboola/php-temp": "^1.0",
        "phpstan/phpstan-shim": "^0.9.2",
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "~3.2"
    },  
    "autoload": {
        "psr-4": {
            "Keboola\\Processor\\Decompress\\": "src/"
        }
    },
    "scripts": {
        "tests-functional": "php ./tests/run.php",
        "tests": [
            "@tests-functional"
        ],

        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-publish --no-check-all",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
